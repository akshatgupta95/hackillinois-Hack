<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#444444"
    android:gravity="center"
    tools:context="com.katt.climateclock.climateclock">

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:id="@+id/timePicker"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btnSetAlarm"
        android:layout_width="match_parent"
        android:textSize="20pt"
        android:layout_height="wrap_content"
        android:background="@drawable/nice_button"
        android:text="Set Alarm"
        android:layout_below="@+id/timePicker"
        />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btnStopAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20pt"
        android:background="@drawable/nice_button2"
        android:text="Stop Alarm"
        android:layout_below="@+id/btnSetAlarm"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:background="@color/White"
        android:textSize="10pt"
        android:id="@+id/repeatCheck"
        android:layout_below="@id/btnStopAlarm"
        android:text="Repeat Alarm "/>


</RelativeLayout>
